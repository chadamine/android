<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="?android:attr/activatedBackgroundIndicator"
	>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_journallist_nameTitle"
        android:text="Name:"
        android:layout_alignParentTop="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_journallist_name"
        android:layout_toRightOf="@id/textview_journallist_nameTitle"
        android:layout_marginLeft="10dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_journallist_manufacturerTitle"
        android:layout_toRightOf="@id/textview_journallist_name"
        android:text="Manufacturer:"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_journallist_manufacturer"
        android:layout_toRightOf="@id/textview_journallist_manufacturerTitle"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_journallist_lineTitle"
        android:layout_toRightOf="@id/textview_journallist_manufacturer"
        android:text="journal Line:"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_journallist_line"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/textview_journallist_lineTitle"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_journallist_typeTitle"
        android:layout_toRightOf="@id/textview_journallist_line"
        android:text="journal Type:"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_journallist_type"
        android:layout_toRightOf="@id/textview_journallist_typeTitle"
        android:layout_marginLeft="10dp"
        />

	</RelativeLayout>
