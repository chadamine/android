<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:id="@+id/textview_product_new_manufacturer_title"
        android:text="Manufacturer:"
        android:gravity="bottom"

        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edittext_product_new_manufacturer"
        android:layout_toRightOf="@id/textview_product_new_manufacturer_title"
        android:ems="10"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:id="@+id/textview_product_new_type"
        android:text="Type:"
        android:layout_below="@id/textview_product_new_manufacturer_title"
        android:gravity="bottom"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edittext_product_new_type"
        android:layout_toRightOf="@id/textview_product_new_type"
        android:layout_below="@id/edittext_product_new_manufacturer"
        android:ems="10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:id="@+id/textview_product_new_line"
        android:text="Product Line:"
        android:layout_below="@id/textview_product_new_type"
        android:gravity="bottom"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edittext_product_new_line"
        android:layout_toRightOf="@id/textview_product_new_line"
        android:layout_below="@id/edittext_product_new_type"
        android:ems="10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:id="@+id/textview_product_new_name"
        android:text="Name:"
        android:layout_below="@id/textview_product_new_line"
        android:gravity="bottom"
        />
    <EditText
        android:id="@+id/edittext_product_new_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textview_product_new_name"
        android:layout_below="@id/edittext_product_new_line"
        android:ems="10"
        />

    <GridView
        android:id="@+id/gridview_product_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext_product_new_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>